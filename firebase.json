{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "**/*.@(js|css)",
        "headers": [
          {"key": "Cache-Control", "value": "no-cache"}
        ]
      },
      {
        "source": "index.html",
        "headers": [
          {"key": "Cache-Control", "value": "no-cache"}
        ]
      }
    ]
  }
}